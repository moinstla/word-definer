<h3><%= @word.word() %></h3>
<ul><h4>
  <% @word.definitions.each() do |definition| %>
    <li><%= definition.definition() %></a></li>
  <% end %>
</ul></h4>
<form action="/word/<%= @word.id %>" method="post">
  <div class="form-group">
     <h4><label for="definition">Add a new definition here:</label></h4>
     <input name="definition" id="definition" class="form-control" type="text">
  </div>
  <button class="btn btn-success">Submit</button>
</form>
<h4><a href="/">Return to your word list</a></h4>
